{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run UI (MainApp)",
      "type": "shell",
      "command": "mvn exec:java -q -Dexec.classpathScope=runtime -Dexec.mainClass=edu.universidad.ui.MainApp",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run UI (javafx:run)",
      "type": "shell",
      "command": "mvn -q javafx:run",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}